{
  "name": "tute",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "start": "node --experimental-modules server",
    "start:dev": "nodemon -w game -w server --exec yarn start ",
    "pretty": "prettier --write **/*.{js,json,scss,vue,yml}"
  },
  "lint-staged": {
    "*.{vue,js}": [
      "prettier --write",
      "eslint --fix --max-warnings 0 --ignore-pattern '!.eslintrc.js'",
      "git add"
    ],
    "*.{scss,json,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "boardgame.io": "^0.26.3",
    "debug": "^4.1.0",
    "immer": "^1.7.4",
    "koa-static": "^5.0.0",
    "vue": "^2.5.17",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.1.1",
    "@vue/cli-plugin-eslint": "^3.1.1",
    "@vue/cli-plugin-unit-jest": "^3.2.0",
    "@vue/cli-service": "^3.1.1",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-poi": "^10.0.2",
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.0.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^5.0.0-0",
    "node-sass": "^4.10.0",
    "nodemon": "^1.18.5",
    "prettier": "^1.15.2",
    "sass-loader": "^7.1.0",
    "vue-cli-plugin-boardgame": "^1.0.6",
    "vue-template-compiler": "^2.5.17"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "standard",
      "plugin:jest/recommended",
      "plugin:vue/recommended",
      "prettier",
      "prettier/standard"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
